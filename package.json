{
  "name": "todotickie",
  "displayName": "TodoTickie",
  "description": "A simple todo list extension for VS Code dated tasks",
  "version": "0.1.0",
  "publisher": "todotickie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dhanithya-Beligolla/todotickie-VScode-Extention.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todo.addTask",
        "title": "Add Todo Task"
      },
      {
        "command": "todo.refresh",
        "title": "Refresh Todo List",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todotickie",
          "title": "TodoTickie",
          "icon": "resources/todotickie.png"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "todoTasks",
          "name": "Todo Tasks",
          "icon": "resources/todotickie.png"
        }
      ],
      "todotickie": [
        {
          "type": "webview",
          "id": "todotickie.sidebar",
          "name": "Todos",
          "icon": "resources/todotickie.png"
        }
      ]
    },
    "menus": {
  "view/title": [
        {
          "command": "todo.refresh",
          "when": "view == todoTasks",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
